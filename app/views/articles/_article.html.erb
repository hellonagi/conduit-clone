<div class="article-preview">
  <div class="article-meta">
    <a href="/profile/eric-simons"><img src="https://i.imgur.com/Qr71crq.jpeg" /></a>
    <div class="info">
      <a href="/profile/eric-simons" class="author"><%= article.user.username %></a>
      <span class="date"><%= time_ago_in_words(article.created_at) %></span>
    </div>
  </div>
  <a href="/article/<%= article.slug %>" class="preview-link">
    <h1><%= article.title %></h1>
    <p><%= article.description %></p>
    <span>Read more...</span>
    <ul class="tag-list">
      <% article.tags.each do |tag| %>
        <li class="tag-default tag-pill tag-outline"><%= tag.name %></li>
      <% end %>
    </ul>
  </a>
</div>